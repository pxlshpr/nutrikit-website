# SSH Connection to Mac
SSH_HOST=100.x.x.x          # Mac's Tailscale IP
SSH_PORT=22
SSH_USERNAME=your_username
SSH_PRIVATE_KEY_PATH=~/.ssh/id_ed25519

# Server Config
PORT=3001
BIND_ADDRESS=127.0.0.1      # Use 127.0.0.1 for local only, 0.0.0.0 for tunnel access

# Controller Authentication
# This token must match TERMINAL_CONTROLLER_TOKEN in your Next.js .env
TERMINAL_CONTROLLER_TOKEN=your-secure-random-token-here

# Session History Buffer
MAX_HISTORY_BYTES=1048576   # 1MB default - max output history for late joiners
